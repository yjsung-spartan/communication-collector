{
  "openapi": "3.0.0",
  "info": {
    "title": "Communication Collector API",
    "version": "1.0.0",
    "description": "API for collecting customer requests from Confluence, Figma, Slack"
  },
  "servers": [
    {
      "url": "https://weplanet-slack-5qjhowyjo-yjsungs-projects.vercel.app"
    }
  ],
  "paths": {
    "/api/requests": {
      "get": {
        "summary": "Get customer requests",
        "description": "Retrieves all customer requests with filtering options",
        "parameters": [
          {
            "name": "project",
            "in": "query",
            "description": "Filter by project (fanlight, momgleedu, all)",
            "required": false,
            "schema": {
              "type": "string",
              "default": "all"
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30
            }
          },
          {
            "name": "source",
            "in": "query",
            "description": "Filter by source",
            "required": false,
            "schema": {
              "type": "string",
              "default": "all"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "timestamp": {
                      "type": "string"
                    },
                    "total": {
                      "type": "number"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/summary": {
      "get": {
        "summary": "Get summary statistics",
        "description": "Returns aggregated statistics",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/requests/llm": {
      "get": {
        "summary": "Get LLM-formatted requests",
        "description": "Returns requests optimized for LLM",
        "parameters": [
          {
            "name": "project",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}